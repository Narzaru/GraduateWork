<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:UI.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="410"
             x:Class="UI.Views.FixedPointsView">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:FixedPointsViewModel />
    </Design.DataContext>

    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Name="StackPanel" Spacing="5" Margin="5">
            <Button Width="150" HorizontalContentAlignment="Center" Command="{Binding LoadCommand}">Load fixed points</Button>
            <Button Width="150" HorizontalContentAlignment="Center">New fixed points</Button>
        </StackPanel>
        <ScrollViewer Margin="5" DockPanel.Dock="Bottom">
            <ItemsControl Items="{Binding Points}" />
        </ScrollViewer>
    </DockPanel>
</UserControl>